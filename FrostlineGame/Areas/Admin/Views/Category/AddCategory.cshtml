@{
    Layout = "_AdminLayout";
}
@model AddCategoryModel

<div class="col-md-12" style="margin-top:20px">
    <div class="card mb-4">
        <h5 class="card-header">Kategori Ekle</h5>
        <div class="card-body">

            <form asp-area="Admin" asp-controller="Category" asp-action="AddCategory" method="post">


                <label class="form-label">Kategori Adı</label>
                <input type="text" name="CategoryName" value="" class="form-control" />
                <span asp-validation-for="CategoryName"></span>


                <button action="submit" style="margin-top:15px" class="btn btn-success">Ekle</button>
            </form>

        </div>
    </div>
</div>
