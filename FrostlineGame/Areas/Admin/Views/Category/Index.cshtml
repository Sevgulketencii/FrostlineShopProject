@{ 
    Layout = "_AdminLayout";
}
@model List<Category>

<div class="table-responsive text-nowrap" style="margin-top:15px">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Kategori ID</th>
                <th>Kategori Adı</th>
                <th>Ürün Statü</th>
                <th>Güncelle</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody class="table-border-bottom-0">

            @foreach (var item in Model)
            {
            <tr>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CategoryID</strong></td>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CategoryName</strong></td>
            
                @{if (item.CategoryStatus == true)
                    {
                        <td><span class="badge bg-label-success me-1">@item.CategoryStatus</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-label-danger me-1">@item.CategoryStatus</span></td>
                    }
                }

                <td><a class="btn rounded-pill btn-warning" asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.CategoryID">Güncelle</a></td>
                <td><a class="btn rounded-pill btn-danger" asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryID">Sil</a></td>
            </tr>    
            }





        </tbody>

    </table>
    <a style="margin-top:5px" class="btn rounded-pill btn-success" asp-action="AddCategory">Ekle</a>
</div>