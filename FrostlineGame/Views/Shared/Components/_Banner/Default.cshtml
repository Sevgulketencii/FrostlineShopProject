@model List<Feature>

<div class="main-banner" id="top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-content">
                    <div class="thumb">
                        <div class="inner-content">
                            <h4>Hexashop'a Hoşgeldin</h4>
                            <span>Ürünleri incelemeye hemen başla</span>
                            <div class="main-border-button">
                                <a href="#men">İncele</a>
                            </div>
                        </div>
                        <img src="/shop/assets/images/left-banner-image.jpg" alt="">
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="right-content">
                    <div class="row">
                        @foreach (var item in Model)
                        {
            <div class="col-lg-6">
                <div class="right-first-image">
                    <div class="thumb">
                        <div class="inner-content">
                            <h4>@item.FeatureName</h4>
                            <span>@item.FeatureTitle</span>
                        </div>
                        <div class="hover-content">
                            <div class="inner">
                                <h4>@item.FeatureName</h4>
                                <p>@item.FeatureDescription</p>
                                
                            </div>
                        </div>
                        <img src="@item.FeatureImage">
                    </div>
                </div>
            </div>            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>